        <item name="boxStrokeWidth">2dp</item> <!-- default thickness -->
        <item name="boxStrokeWidthFocused">3dp</item> <!-- thickness when focused -->
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxBackgroundColor">@android:color/white</item>
